{
  "name": "navio-server",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "debug": "NODE_ENV=development tsx watch --inspect src/index.ts",
    "test": "NODE_ENV=test vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:gen": "NODE_ENV=development npx drizzle-kit generate",
    "db:gen-auth": "NODE_ENV=development npx @better-auth/cli generate --config ./src/utils/auth.utils.ts --output ./src/db/schemas/auth.schema.ts",
    "db:migrate": "NODE_ENV=development npx drizzle-kit migrate",
    "db:migrate:test": "NODE_ENV=test npx drizzle-kit migrate"
  },
  "dependencies": {
    "@faker-js/faker": "^10.3.0",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.1",
    "@scalar/hono-api-reference": "^0.9.40",
    "better-auth": "^1.4.18",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "hono-pino": "^0.10.3",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.18",
    "@eslint/js": "^9.39.2",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
